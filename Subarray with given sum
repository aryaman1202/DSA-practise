
def subArraySum(arr, n, s):
    # Write your code here
    sum = 0
    a = 0
    while sum != 15:
        sum = 0
        for i in range(a, len(arr)):
            sum = sum + arr[i]
            if sum == 15:
                return a, i
        a = a+1

    return None, None


arr = [1, 2, 3, 7, 5]
x, y = subArraySum(arr, 5, 12)
print(x, y)
